<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.po">

	<class name="Teacher" table="t_teacher">
	    <id name="tId" column="tid" type="integer"></id>
		<property name="tName" column="tname" type="string" length="20" not-null="true"></property>
		<property name="position" column="position" type="string" length="50" not-null="false"></property>
		<property name="title" column="title" type="string" length="10" not-null="false"></property>
		<property name="dept" column="dept" type="string" length="10" not-null="false"></property>
		<property name="password" column="password" type="string" length="100"  not-null="true"></property>
		<property name="rank" column="rank" type="integer" length="1" not-null="true"></property>
	</class>
	
</hibernate-mapping>
